<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/item_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical"
        android:background="@drawable/item_coin_style"
        android:layout_margin="8dp"

>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/item_coin_style_inner"

    >

        <ImageView
                android:id="@+id/coinIconImageView"
                android:src="@drawable/bitcoinicon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="2.5dp"
                android:layout_marginTop="2.5dp"
        />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
        >
            <TextView
                    android:id="@+id/coinNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="italic|bold"
                    android:text="Ethereum"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textColor="@color/cBlack"/>

            <LinearLayout
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
            >

                <TextView
                        android:id="@+id/algoTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Algo: Cryptonight R"
                        android:gravity="center"
                        android:textColor="@color/cBlack"
                        android:layout_weight="1"/>

                <TextView
                        android:id="@+id/hashPowerTextView"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10000 Mh/s"
                        android:gravity="center"
                        android:textColor="@color/cBlack"
                        android:layout_weight="1"/>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
        >

            <TextView
                    android:id="@+id/dailyUsdTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily profit: 10000$"
                    android:gravity="center"
                    android:textColor="#2B5F2D"
                    android:layout_weight="1"/>

            <TextView
                    android:id="@+id/dailyCoinsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily coins: 99999"
                    android:gravity="center"
                    android:textColor="#134774"

                    android:layout_weight="1"/>

        </LinearLayout>


        <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
        >

            <TextView
                    android:id="@+id/monthlyUsdTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monthly profit: 1000000$"
                    android:gravity="center"
                    android:textColor="#2B5F2D"
                    android:layout_weight="1"/>

            <TextView
                    android:id="@+id/monthlyCoinsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monthly coins: 9999999"
                    android:gravity="center"
                    android:textColor="#134774"

                    android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
        >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic|bold"
                    android:text="Volume in 24h: "
                    android:layout_gravity="center"/>

            <TextView
                    android:id="@+id/volumeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="99999999999$"
                    android:layout_gravity="center"/>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>