<?xml version="1.0" encoding="utf-8"?>

<ScrollView

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
    >


        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/devicesRecycleAMD"
                android:layout_margin="8dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
        />
        <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:background="@drawable/threedots"
                android:layout_height="wrap_content"
        />

        <ImageView
                android:id="@+id/lineSeparator"
                android:layout_width="match_parent"
                android:background="@drawable/line_razd"
                android:layout_height="wrap_content"
        />

        <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
        >


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"
            >

                <TextView
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:text="@string/build_your_rig"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
            >

                <TextView
                        android:id="@+id/rigDeviceCounterAMD"
                        android:textStyle="bold|italic"
                        android:textSize="18sp"
                        android:text="@string/_0_devices"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
        >


            <LinearLayout
                    android:id="@+id/deviceNameLayoutAMD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"
            >


            </LinearLayout>

            <LinearLayout
                    android:id="@+id/deviceCountLayoutAMD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
            >


            </LinearLayout>


        </LinearLayout>


        <Button
                android:id="@+id/clearRigButtonAMD"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/close"
                android:drawablePadding="4dp"
                android:background="@drawable/clearall_selector"
                android:text="@string/clear_all"
                android:textStyle="italic"
                android:textSize="11sp"
                android:layout_marginRight="35dp"
                android:layout_width="100dp"
                android:layout_height="20dp"
        />

        <Button
                android:id="@+id/calculateRigButtonAMD"
                android:layout_marginTop="25dp"
                android:background="@drawable/calculate_selector"
                android:text="@string/calculate_rig"
                android:textStyle="italic"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
        />

        <com.google.android.gms.ads.AdView
                android:id="@+id/adViewAmd"
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ads:adSize="SMART_BANNER"
                ads:adUnitId="ca-app-pub-3940256099942544/6300978111"
                ads:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="260dp"
        >
        </com.google.android.gms.ads.AdView>


    </LinearLayout>
</ScrollView>