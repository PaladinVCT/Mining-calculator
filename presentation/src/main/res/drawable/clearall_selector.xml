<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <color android:color="#F0F0F0"/>

        <shape>

            <stroke
                    android:width="1dp"
                    android:color="@color/red_info" />
            <corners
                    android:radius="4dp" />
        </shape>
    </item>
    <item>
        <shape>

            <stroke
                    android:width="1dp"
                    android:color="#8CA4B6" />
            <corners
                    android:radius="4dp" />
        </shape>
    </item>
</selector>