<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/item_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/item_coin_style"
        android:orientation="vertical"
        android:padding="10dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/poolIconImageView"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:padding="8dp"
                android:src="@drawable/bitcoinicon" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="5dp"
                >

            <TextView
                    android:id="@+id/poolNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/darkBlue"
                    android:textSize="24sp"
                    android:textStyle="italic|bold"
                    tools:text="Wattum pool" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/squared_black"
            >

        <TextView
                android:id="@+id/averageFeeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:gravity="start"
                android:layout_marginStart="10dp"
                android:textColor="@color/cBlack"
                android:text="@string/average_pool_rating" />

        <TextView
                android:id="@+id/poolRatingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableEnd="@drawable/ic_star_24"
                android:drawablePadding="-25dp"
                android:gravity="center"
                android:textColor="@color/cBlack"
                android:textStyle="bold"
                tools:text="4.5" />

    </LinearLayout>
    <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/squared_black"
            >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:textSize="16sp"
                android:gravity="start"
                android:layout_marginStart="10dp"
                android:textColor="@color/cBlack"
                android:text="@string/average_pool_fee" />

        <TextView
                android:id="@+id/poolFeeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_marginEnd="10dp"
                android:textColor="@color/cBlack"
                android:textStyle="bold"
                tools:text="0.5%" />

    </LinearLayout>

    <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/squared_black"
            >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textSize="16sp"
                android:gravity="start"
                android:layout_marginStart="10dp"
                android:textColor="@color/cBlack"
                android:text="@string/server_location" />

        <TextView
                android:id="@+id/poolLocationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_marginEnd="10dp"
                android:textColor="@color/cBlack"
                tools:text="Europe Asia USA" />

    </LinearLayout>

    <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/squared_black"
            >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textSize="16sp"
                android:gravity="start"
                android:layout_marginStart="10dp"
                android:textColor="@color/cBlack"
                android:text="@string/payment_type" />

        <TextView
                android:id="@+id/poolPaymentTypeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_marginEnd="10dp"
                android:textColor="@color/cBlack"
                tools:text="Prop PPLNS PPS " />

    </LinearLayout>
    <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/squared_black"
            >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textSize="16sp"
                android:gravity="start"
                android:layout_marginStart="10dp"
                android:textColor="@color/cBlack"
                android:text="@string/website" />

        <TextView
                android:autoLink="web"
                android:id="@+id/poolWebsite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_marginEnd="10dp"
                android:textColor="@color/cBlack"
                tools:text="https://www.antpool.com" />

    </LinearLayout>

    <TextView
            android:drawableStart="@drawable/ic_dollar_24"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/pool_supports_mining_of_these_coins"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/poolCoinList"
            tools:text="ETH BTC ETC XMR"
            android:textSize="11sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

    <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/line_razd"
            android:layout_height="wrap_content"/>

    <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    <TextView
            android:text="@string/you_can_rate_this_pool"
            android:textSize="11sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

</LinearLayout>