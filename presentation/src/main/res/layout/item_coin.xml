<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/item_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/item_coin_style"
        android:orientation="vertical"
        android:padding="16dp"

        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_coin_style_inner"
            android:orientation="horizontal"

            >

        <ImageView
                android:id="@+id/coinIconImageView"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="2.5dp"
                android:layout_marginTop="2.5dp"
                android:src="@drawable/bitcoinicon" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/coinNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Ethereum"
                    android:textColor="@color/cBlack"
                    android:textSize="18sp"
                    android:textStyle="italic|bold" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/algoTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Algo: Cryptonight R"
                        android:textColor="@color/cBlack" />

                <TextView
                        android:id="@+id/hashPowerTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="10000 Mh/s"
                        android:textColor="@color/cBlack"
                        android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/dailyUsdTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#2B5F2D"
                    tools:text="Daily profit: 10000$" />

            <TextView
                    android:id="@+id/dailyCoinsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#134774"

                    tools:text="Daily coins: 99999" />

        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/monthlyUsdTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#2B5F2D"
                    tools:text="Monthly profit: 1000000$" />

            <TextView
                    android:id="@+id/monthlyCoinsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#134774"

                    tools:text="Monthly coins: 9999999" />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textStyle="italic|bold"
                    tools:text="Volume in 24h: " />

            <TextView
                    android:id="@+id/volumeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    tools:text="99999999999$" />


        </LinearLayout>

        <TextView
                android:id="@+id/volumeWarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/trading_volume_is_low_better_switch_to_other_coins"
                android:textColor="@color/red_info"
                android:textSize="12sp"
                android:visibility="gone" />

    </LinearLayout>

</LinearLayout>